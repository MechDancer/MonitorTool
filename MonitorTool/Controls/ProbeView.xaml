<UserControl
    x:Class="MonitorTool.Controls.ProbeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="200"
    Width="200"
    Unloaded="ProbeView_OnUnloaded">

    <Grid Padding="12" BorderThickness="2" BorderBrush="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Bind Path=_view.Header,Mode=OneWay}" FontSize="18" />
        <ListView ItemsSource="{x:Bind Path=_view.Group, Mode=OneWay}"
                  Grid.Row="1" />
        <Button Background="Red" Opacity="0.5" Click="Button_Click"
                Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                HorizontalAlignment="Stretch" Grid.Row="2" />
    </Grid>
</UserControl>