<Page
    x:Class="MonitorTool.Pages.TopicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView Name="TopicView" AllowDrop="False" ItemInvoked="TopicView_ItemInvoked" />
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="32" Text="{x:Bind _viewModel.Host, Mode=OneWay}" />
                <TextBlock FontSize="32" Text=":" Margin="4,0,8,0" />
                <TextBlock FontSize="32" Text="{x:Bind _viewModel.Topic, Mode=OneWay}" />
            </StackPanel>
            <ComboBox Header="数据格式" Margin="8" SelectedItem="{x:Bind _viewModel.Dim, Mode=TwoWay}">
                <x:String>一维</x:String>
                <x:String>二维</x:String>
                <x:String>单帧</x:String>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>